{
  "name": "cosmopolis-logo-animation",
  "version": "1.0.0",
  "description": "Cosmopolis logo animation",
  "main": "index.html",
  "author": "Alexandros Papadopoulos",
  "license": "ISC",
  "scripts": {
    "clear": "rm -rf public",
    "copy": "copyfiles -f src/*.html public",
    "styles": "postcss src/*.css -d public/",
    "scripts": "rollup -c",
    "watch:copy": "onchange src/*.* -i -- npm run copy",
    "watch:styles": "npm run styles -- -w",
    "watch:scripts": "npm run scripts -- -w",
    "build:copy": "npm run copy",
    "build:styles": "npm run styles -- --env production",
    "build:scripts": "npm run scripts -- --environment BUILD:production",
    "serve": "browser-sync start --config browsersync.config.js",
    "start": "run-p serve watch:* --silent",
    "build": "npm-run-all clear -p build:* --silent"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "babel-preset-es2015-rollup": "^3.0.0",
    "browser-sync": "^2.26.12",
    "copyfiles": "^2.3.0",
    "core-js": "^3.6.5",
    "cssnano": "^4.1.10",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "postcss": "^7.0.32",
    "postcss-cli": "^7.1.2",
    "postcss-preset-env": "^6.7.0",
    "rollup": "^2.26.10",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "dependencies": {},
  "keywords": []
}
